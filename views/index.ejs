<!DOCTYPE html>
<html>
<head>
	<title>Example</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.9/angular.min.js"></script>
	<script src="javascripts/angular.js"></script>
</head>
<body ng-app="myapp">
    <div class="col-md-12">
        <a href="/"><i style="margin-left:1000px;margin-top:10px;" class="glyphicon glyphicon-off btn btn-danger">&nbsp;Logout</i></a>
    </div>
	<div class="container" ng-controller="myController">
    <form class="form-group">
    	<h1>Form</h1>
    	<label>Name :</label>
    	<input class="form-control" type="text" ng-model="users.name">
    	<label>Roll No :</label>
    	<input class="form-control" type="text" ng-model="users.rollno">
    	<label>Branch :</label>
    	<input class="form-control" type="text" ng-model="users.branch">
    	<label>College :</label>
    	<input class="form-control" type="text" ng-model="users.college">
    	<br>
    	<button class="btn btn-info" ng-click="save(users)">Submit</button>
    </form>
    <br>
    <table class="table table-bordered">
    	<thead>
    		<tr>
                <th>S.No</th>
                <th>Id</th>
    			<th>Name</th>
    			<th>Rollno</th>
    			<th>Branch</th>
    			<th>College</th>
                <th>Action</th>
    		</tr>
    	</thead>
    	<tbody>
    		<tr ng-repeat="users in user">
                <td>{{$index+1}}</td>
                <td>{{users._id}}</td>
    			<td>
                    <span ng-hide="editUser">{{users.name}}</span>
                    <input class="form-control" ng-show="editUser" type="text" ng-model="users.name">
                </td>
    			<td>
                    <span ng-hide="editUser">{{users.rollno}}</span>
                    <input class="form-control" ng-show="editUser" type="text" ng-model="users.rollno">
                </td>
    			<td>
                    <span ng-hide="editUser">{{users.branch}}</span>
                    <input class="form-control" ng-show="editUser" type="text" ng-model="users.branch">
                </td>
    			<td>
                    <span ng-hide="editUser">{{users.college}}</span>
                    <input class="form-control" ng-show="editUser" type="text" ng-model="users.college">
                </td>
                <td>
                    <i class="btn btn-primary glyphicon glyphicon-edit" ng-click="editData(users); editUser = true" ng-hide="editUser"></i>
                    <i class="btn btn-success glyphicon glyphicon-ok" ng-click="updateUser(users); editUser = false" ng-show="editUser"></i>
                    <i class="btn btn-danger glyphicon glyphicon-trash" ng-click="removeUser(users)"></i>
                </td>s
    		</tr>
    	</tbody>
    </table>
	</div>
</body>
</html>